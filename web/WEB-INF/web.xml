<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>DisplayMessage</servlet-name>
        <servlet-class>ch.hearc.ig.odi.customeraccount.Servlet.DisplayMessage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>displayInformation</servlet-name>
        <servlet-class>ch.hearc.ig.odi.customeraccount.Servlet.displayInformation</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>parametre</param-value>
            <!--<param-value>/WEB-INF/struts-config.xml</param-value>-->
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>AskNameToDisplay</servlet-name>
        <servlet-class>ch.hearc.ig.odi.customeraccount.Servlet.AskNameToDisplay</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AskNameToStoreToSession</servlet-name>
        <servlet-class>ch.hearc.ig.odi.customeraccount.Servlet.AskNameToStoreToSession</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayMessage</servlet-name>
        <url-pattern>/DisplayMessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>displayInformation</servlet-name>
        <url-pattern>/displayInformation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AskNameToDisplay</servlet-name>
        <url-pattern>/AskNameToDisplay</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AskNameToStoreToSession</servlet-name>
        <url-pattern>/AskNameToStoreToSession</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
